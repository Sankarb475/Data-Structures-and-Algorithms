# solution of :: https://leetcode.com/problems/maximize-sum-of-array-after-k-negations/ 

import heapq

class Solution:
    def largestSumAfterKNegations(self, A: List[int], K: int) -> int:
        heapq.heapify(A)
        for i in range(K):
            heapq.heapreplace(A,-A[0])
        return sum(A)
        
        
